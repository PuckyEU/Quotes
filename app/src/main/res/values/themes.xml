<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_variant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Appcompat.Quotes.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_variant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">@color/dark_grey</item>
    </style>
    <style name="whiteButton">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="addButton">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="android:drawableStart">@drawable/ic_baseline_add_24</item>
        <item name="drawableStartCompat">@drawable/ic_baseline_add_24</item>
    </style>
    <style name="transparentButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:foregroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.AppCompat.SlidrActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/background_material_light</item>
    </style>

    <style name="Theme">Theme</style>

</resources>