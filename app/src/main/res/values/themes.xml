<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quotes" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary_variant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Appcompat.Quotes.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary_variant</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>
    <style name="whiteButton">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="addButton">
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="android:background" tools:targetApi="34">?attr/colorPrimary</item>
        <item name="android:drawableStart">@drawable/ic_baseline_add_24</item>
        <item name="drawableStartCompat">@drawable/ic_baseline_add_24</item>
    </style>
    <style name="transparentButton" parent="@style/Widget.Material3.Button">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:foregroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.AppCompat.SlidrActivityTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/background_material_light</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary_variant</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

</resources>