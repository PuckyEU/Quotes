<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Quotes" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">@color/light_grey</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="bottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/light_grey</item>
        <item name="android:foregroundTint">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="colorSecondaryContainer">@color/half_light_grey</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
    </style>

    <style name="transparentButton" parent="@style/Widget.Material3.Button">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:foregroundTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="background">
        <item name="android:background">@color/light_grey_bg</item>
    </style>

    <style name="elevatedBackground">
        <item name="android:background">@color/light_grey</item>
    </style>
</resources>