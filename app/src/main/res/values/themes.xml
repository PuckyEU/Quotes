<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_variant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">@color/dark_grey</item>
    </style>
    <style name="addButton">
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="android:drawableStart">@drawable/ic_baseline_add_24</item>
        <item name="drawableStartCompat">@drawable/ic_baseline_add_24</item>
    </style>
</resources>